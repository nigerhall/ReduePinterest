<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>About:</strong>
  <%= @board.about %>
</p>

<p>
  <strong>User:</strong>
  <%= @board.user.first_name %> 
</p>
<p>
  <strong>Create A New Pin:</strong>
  <%= Pin.new %> 
</p>
<p> Showing All <%= @board.name %>'s Pins: </p>
<ul>
	<% @pins.each do |pin| %>
	<li><%= pin.name %></li>
        <li><%= image_tag(pin.image_url, :width => 200) if pin.image.present? %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_board_path(@board) %> |
